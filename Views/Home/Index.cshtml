@model UploadArquivos.Models.UploadModel

@{
    ViewData["Title"] = "Home Page";
}

<div style="margin-top:18%">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Index" method="post" enctype="multipart/form-data">
                <label class="font-weight-bold" for="input-fas">Selecione os arquivos</label>
                <input type="file" asp-for="Files"  id="input-fas" name="files" data-allowed-file-extensions='["pdf", "doc", "docx", "jpg", "jpeg", "bmp", "png", "xlsx", "xls"]' multiple>
                <span class="text-sm-right text-right">Arquivos aceitos ( pdf, doc, docx, jpg, jpeg, bmp, png, xlsx, xls )</span>
                <button type="submit" class="btn btn-primary btn-block">upload</button>
            </form>
        </div>
    </div>
</div>
